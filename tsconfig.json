{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "pretty": true,
        "target": "es2020",
        "outDir": "./dist",
        "baseUrl": "./src",
        "allowJs": true,
        "skipLibCheck": true,
        "declaration": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules"]
}
